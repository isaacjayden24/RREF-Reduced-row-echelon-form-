<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFEEEEEE"/> <!-- Light grey background -->
        </shape>
    </item>

    <!-- Gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#FF6200EE"
            android:centerColor="#FF03DAC5" />
            android:endColor="#FF018786" <!-- Dark Teal -->
            android:type="linear"/>
        </shape>
    </item>

    <!-- Overlay for additional effects -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55FFFFFF"/> <!-- White overlay with transparency -->
        </shape>
    </item>

</layer-list>
